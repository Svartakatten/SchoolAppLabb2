@model SchoolAppLabb2.Models.UpdateTeacherNameModel

<h2>Update Teacher Name</h2>

<form asp-action="UpdateTeacherName" method="post">
    <div class="form-group">
        <label asp-for="CurrentTeacherName" class="control-label">Current Teacher Name</label>
        <input asp-for="CurrentTeacherName" class="form-control" />
        <span asp-validation-for="CurrentTeacherName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewTeacherName" class="control-label">New Teacher Name</label>
        <input asp-for="NewTeacherName" class="form-control" />
        <span asp-validation-for="NewTeacherName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Teacher Name</button>
</form>